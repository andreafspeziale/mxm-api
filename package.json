{
  "name": "@andreafspeziale/mxm-api",
  "version": "1.0.0-rc.0",
  "description": "Musixmatch API client for Node.js and TypeScript",
  "author": "Andrea Francesco Speziale",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreafspeziale/mxm-api"
  },
  "bugs": {
    "url": "https://github.com/andreafspeziale/mxm-api/issues"
  },
  "homepage": "https://github.com/andreafspeziale/mxm-api#readme",
  "scripts": {
    "prepare": "husky",
    "build": "tsc -p tsconfig.build.json",
    "build:check": "tsc --noEmit",
    "biome:check": "biome check src",
    "biome:fix": "biome check src --write",
    "test": "tap"
  },
  "keywords": [
    "musixmatch",
    "music",
    "lyrics",
    "api",
    "lyrics",
    "nodejs",
    "typescript",
    "client",
    "sdk"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24.11.0"
  },
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "pino": "^10.1.0",
    "undici": "^7.16.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/recommended": "^1.0.11",
    "@tsconfig/strictest": "^2.0.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tap": "^21.1.3",
    "typescript": "^5.9.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "pnpm biome:fix"
  }
}
